<?xml version="1.0" encoding="UTF-8" ?>

<schema name="example" version="1.5">
 
 <fields>

   <field name="_version_" type="long" indexed="true" stored="true"/>
   <field name="_root_" type="string" indexed="true" stored="false"/>
   
   <!-- phis ids-->

   <field name="id" type="string" indexed="true" stored="true" required="true" multiValued="false" />
   
   <!-- image documents - general info -->
   
   <field name="associated_roi" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="associated_channel" type="string" indexed="true" stored="true" multiValued="true"/>
   
   <field name="data_source" type="string" indexed="true" stored="true" required="true"/>
   <field name="depth" type="float" indexed="true" stored="true"/>
   <field name="format" type="string" indexed="true" stored="true"/>
   <field name="height" type="float" indexed="true" stored="true"/>
   <field name="host_url" type="float" indexed="true" stored="true" required="true"/>
   <field name="host_name" type="float" indexed="true" stored="true" required="true"/>
   <field name="image_generated_by" type="string" indexed="true" stored="true" multiValued="true" required="true"/>
   <field name="image_url" type="string" indexed="true" stored="true" required="true"/>
   <field name="image_context_url" type="string" indexed="true" stored="true" required="true"/>
   <field name="image_type" type="string" indexed="true" stored="true"/>
   <field name="imaging_method" type="string" indexed="true" stored="true"/>
   <field name="sample_preparation" type="string" indexed="true" stored="true"/>
   <field name="visualisation_method" type="string" indexed="true" stored="true"/>
   
   <field name="machine" type="string" indexed="true" stored="true"/>
   <field name="original_image_id" type="string" indexed="true" stored="true" required="true"/>
   <field name="thumbnail_path" type="string" indexed="true" stored="true"/>
   <field name="width" type="float" indexed="true" stored="true"/>

   <!-- Sample -->
   
   <field name="age_since_birth" type="float" indexed="true" stored="true"/>
   <field name="sample_generated_by" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="taxon" type="string" indexed="true" stored="true" required="true"/>
   <field name="ncbi_taxon_id" type="string" indexed="true" stored="true"/>
   <field name="sex" type="string" indexed="true" stored="true"/>
   <field name="stage" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="embryonic_age" type="float" indexed="true" stored="true"/>
   
   <!-- annotations -->
   
   <field name="anatomy_id" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="anatomy_term" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="anatomy_freetext" type="string" indexed="true" stored="true" multiValued="true"/>
   <!-- field name="anatomy_computed_id" type="string" indexed="true" stored="true" multiValued="true"/-->
   <!-- field name="anatomy_computed_term" type="string" indexed="true" stored="true" multiValued="true"/-->
   <!-- field name="anatomy_ann_bag" type="string" indexed="true" stored="true" multiValued="true"/-->
   <!-- field name="other_ann_bag" type="string" indexed="true" stored="true" multiValued="true"/-->
   
   <!-- field name="phenotype_ann_bag" type="string" indexed="true" stored="true" multiValued="true"/-->
   
   <field name="observations" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="conditions" type="string" indexed="true" stored="true" multiValued="true"/>


   <!-- genetic features -->
   <field name="gene_id" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="gene_symbol" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="genetic_feature_id" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="genetic_feature_symbol" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="genetic_feature_ensembl_id" type="string" indexed="true" stored="true" multiValued="true"/>
   <!-- field name="genotype_component_bag" type="string" indexed="true" stored="true" multiValued="true"/--> <!-- genetic feature -->
   <!-- field name="expressed_gf_bag" type="string" indexed="true" stored="true" multiValued="true"/-->
   <!-- field name="expressed_anatomy_bag" type="string" indexed="true" stored="true" multiValued="true"/-->
   
   <field name="chromosome" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="insertion_site" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="start_pos" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="end_pos" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="strand" type="string" indexed="true" stored="true" multiValued="true"/>
   <field name="zygosity" type="string" indexed="true" stored="true" multiValued="true"/>
   

 </fields>


 <!-- Field to use to determine and enforce document uniqueness. 
      Unless this field is marked with required="false", it will be a required field
   -->
 <uniqueKey>id</uniqueKey>
 
  <types>
    <fieldType name="string" class="solr.StrField" sortMissingLast="true" />
    <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>
    <fieldType name="int" class="solr.TrieIntField" precisionStep="0" positionIncrementGap="0"/>
    <fieldType name="float" class="solr.TrieFloatField" precisionStep="0" positionIncrementGap="0"/>
    <fieldType name="long" class="solr.TrieLongField" precisionStep="0" positionIncrementGap="0"/>
    <fieldType name="double" class="solr.TrieDoubleField" precisionStep="0" positionIncrementGap="0"/>

    <fieldType name="tint" class="solr.TrieIntField" precisionStep="8" positionIncrementGap="0"/>
    <fieldType name="tfloat" class="solr.TrieFloatField" precisionStep="8" positionIncrementGap="0"/>
    <fieldType name="tlong" class="solr.TrieLongField" precisionStep="8" positionIncrementGap="0"/>
    <fieldType name="tdouble" class="solr.TrieDoubleField" precisionStep="8" positionIncrementGap="0"/>

    <fieldType name="date" class="solr.TrieDateField" precisionStep="0" positionIncrementGap="0"/>
    <fieldType name="tdate" class="solr.TrieDateField" precisionStep="6" positionIncrementGap="0"/>

    <fieldtype name="binary" class="solr.BinaryField"/>
    <fieldType name="pint" class="solr.IntField"/>
    <fieldType name="plong" class="solr.LongField"/>
    <fieldType name="pfloat" class="solr.FloatField"/>
    <fieldType name="pdouble" class="solr.DoubleField"/>
    <fieldType name="pdate" class="solr.DateField" sortMissingLast="true"/>
    <fieldType name="random" class="solr.RandomSortField" indexed="true" />


 </types>
  

</schema>
